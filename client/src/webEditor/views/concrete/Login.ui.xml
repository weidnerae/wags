<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.programming.view"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	
		.columns {
			padding:0.2em;
		}
		
		.sub_columns {
			padding:0.2em;
			width: 100%;
		}
		
		.label {
			width: 5em;
			display: block;
			float: left;
			font-size: 15px;
			margin-right: 0.5em;
			text-align: left;
		    margin-top: 3px;
		    color: white;
		    font-weight: boldest;
		    text-shadow:
		    -1px -1px 0 #000,
		    1px -1px 0 #000,
		    -1px 1px 0 #000,
		    1px 1px 0 #000;
		}
		
		.title1 { 
		    color: white;
		    text-align: center;
		    font-size: 14em;
		    font-weight: lighter;
		    font-style: italic;
		    font-family: console;
		    text-shadow:
		    -1px -1px 0 #000,
		    1px -1px 0 #000,
		    -1px 1px 0 #000,
		    1px 1px 0 #000;
		}
		
		.title2 { 
			padding-bottom: 30px;
		    color: white;
		    text-align: center;
		    font-size: 3em;
		    font-weight: lighter;
		    font-style: italic;
		    font-family: console;
		    text-shadow:
		     -1px -1px 0 #000,
		     1px -1px 0 #000,
		     -1px 1px 0 #000,
		     1px 1px 0 #000;
		}
		.button {
			background-image: none !important;
   		    background-repeat: no-repeat !important;
			border-radius: 0 !important;
			text-shadow: none !important;
			font-size: 14px;
			filter: none;
			padding-top: 15%;
			padding-bottom: 15%;
			min-width: 14.5em;
			background-color:white;
			margin: .5em;
			padding-left: 7%;
			padding-right: 7%;
			font-weight: bold;
			height: 25px;
			width: 34%;
			text-align: center;
			margin: 10px auto auto auto;
		}
		.header
		{
		    margin-top: 20px;
		    padding: 5px 0px 40px 0px;
		    width: 920px;
		}

		.positioning
		{
			left:21%;
			right:20%;
			width:100%;
		}
		.text {
			font-size: 15px;
			font-family: Consolas, arial, verdana, san-serif;
			color:white;
			background-color: #34495E;
		}
		.title {
			font-family: Consolas, arial, verdana, san-serif;
			font-size:50px;
			color:white;
			text-decoration: none;
			padding-bottom: 10px;
		}
		.content {
			text-align:center;
			width: 70%;
			margin-left: auto;
			margin-right: auto;
			top:20px !important;
		}		

	</ui:style>
	
	
	<b:FluidContainer addStyleNames="{style.content}">
	    <b:Hero addStyleNames="{style.text}">
	    	<b:Heading size="6" addStyleNames="{style.title}">Wags</b:Heading> 
	    	<b:Paragraph>Web Automated Grading System</b:Paragraph>
	    	
	        <b:Row>
	            <b:TextBox placeholder="username" ui:field="username"/>
			</b:Row>
			<b:Row>
			    <b:PasswordTextBox placeholder="password" ui:field="password"/>
			</b:Row>
	        <b:Row>
	            <g:Button addStyleNames="btn" ui:field="loginButton">Login</g:Button>
	        </b:Row>
	    </b:Hero>
	</b:FluidContainer>
	
