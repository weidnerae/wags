<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>

		.button {
			background-image: none !important;
   		    background-repeat: no-repeat !important;
			border-radius: 0 !important;
			text-shadow: none !important;
			font-size: 14px;
			filter: none;
			padding-top: 15%;
			padding-bottom: 15%;
			min-width: 15em;
			margin: .5em;
			padding-left: 7%;
			padding-right: 7%;
		}
		
		.columns {
			padding:0.2em;
		}
		
		.title {
			font-family: Consolas, arial, verdana, san-serif;
			font-size:50px;
			color:white;
			text-decoration: none;
			padding-bottom: 10px;
		}

		.content {
			text-align:center;
			width: 70%;
			margin-left: auto;
			margin-right: auto;
			top:20px !important;
		}
		
		.text {
			font-size: 15px;
			font-family: Consolas, arial, verdana, san-serif;
			color:white;
			background-color: #34495E;
		}
	</ui:style>

	<b:FluidContainer addStyleNames="{style.content}">
	    <b:Hero addStyleNames="{style.text}">
	        <b:Heading size="4" addStyleNames="{style.title}">Wags</b:Heading>
	        <b:Paragraph>Web Automated Grading System</b:Paragraph>
	        <b:Paragraph>Developed by The Appalachain State University Computer Science Department</b:Paragraph>
	    
	    <b:FluidRow>
	        <b:Column size="3" offset="3"> 
	            <b:Row><b:Button size="LARGE" addStyleNames="{style.button}" ui:field='editorButton'>Web Editor</b:Button></b:Row>
				<b:Row><b:Button size="LARGE" addStyleNames="{style.button}" ui:field='logicalButton'>Logical Microlabs</b:Button></b:Row>
				<b:Row><b:Button size="LARGE" addStyleNames="{style.button}" ui:field='magnetButton'>Magnet Microlabs</b:Button></b:Row>
				<b:Row><b:Button size="LARGE" addStyleNames="{style.button}" ui:field='databaseButton'>Database Microlabs</b:Button></b:Row>
	        </b:Column>
	        <b:Column size="3">
	            <b:Row><b:Button size="LARGE" addStyleNames="{style.button}" ui:field='adminButton' visible='false'>Admin Panel</b:Button></b:Row>
				<b:Row><b:Button size="LARGE" addStyleNames="{style.button}" ui:field='magnetPCButton' visible='false'>Magnet Problem Creation</b:Button></b:Row>
				<b:Row><b:Button size="LARGE" addStyleNames="{style.button}" ui:field='logicalPCButton' visible='false'>Logical Problem Creation</b:Button></b:Row>
				<b:Row><b:Button size="LARGE" addStyleNames="{style.button}" ui:field='databasePCButton' visible='false'>Database Problem Creation</b:Button></b:Row>
	        </b:Column>
	    </b:FluidRow>
	    </b:Hero>
	</b:FluidContainer>
	
