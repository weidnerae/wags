<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.programming.view">
	
	<ui:style>
        
        body {
            background:#F1DD9E;
        }

        .listBox {
            background-color: #4a6713;
            border-color: #4a6713;
            cursor: pointer;
            color: white;
            font-size: 18px;
            font-family: arial, verdana, san-serif;
            font-weight: bolder;
            top: 1em;
            position: relative;
        }
	
		.applicationBar {
			padding-bottom:10px;
			width: 100%;
			text-align: right; 
			background-color: rgb(74,103,19);
			border: 5px solid black;
        }

        .bottomBordered {
			border: 5px solid black;	
 		}

		.anchor { 
			cursor: pointer; 
			position: relative;
    		font-weight: bolder;
    		font-family: arial, verdana, san-serif;
    		font-size: 18px;
    		text-align: center;
            color: white;
            width: 100%;
            height: 100%;
            position:relative;
            margin: 10, auto;
            padding: 10px;
            cursor: pointer;
			top: 1em;
			right:1em;
		}
		
		.anchor:hover { 
			color: gold; 
			z-index: 102;
		}

		.hello-logout {  
			vertical-align: middle; 
       		padding-right: 5px; 
            display: inline;
            z-index: 102;
			position: relative;
			cursor:pointer;
		}
		
		.std-txt { 
			padding-top: 6px 
		}
		
		.title { 
            cursor: pointer;
			font-size: 30px;
			font-weight: heavy;
			color: white;
			z-index: 101;
			position: relative;
			vertical-align: center;
			display: inline;
            float:left;
			text-decoration:none;
			left:0.7em;
			top:0.5em;
		}
		.title:visited {
			color:white;
        }
		.title:hover {
			color:gold;
        }
			
	</ui:style>

	<g:DockLayoutPanel unit="EM" ui:field="dock">
		<g:north size="6" styleName="{style.bottomBordered}">
			<g:HTMLPanel styleName="{style.applicationBar}">
				<g:Anchor horizontalAlignment="ALIGN_CENTER" styleName="{style.title}" ui:field="Home">WAGS</g:Anchor>
                <g:ListBox ui:field="Management" name="magement" styleName="{style.listBox}"></g:ListBox>
				<g:Anchor  addStyleNames="{style.anchor}  {style.hello-logout}" ui:field="Editor">Editor</g:Anchor> 
				<g:Anchor  addStyleNames="{style.anchor}  {style.hello-logout}" ui:field="Magnets">Magnets</g:Anchor> 
				<g:Anchor  addStyleNames="{style.anchor}  {style.hello-logout}" ui:field="DST">Logical</g:Anchor>
				<g:Anchor  addStyleNames="{style.anchor}  {style.hello-logout}" ui:field="Database">Database</g:Anchor> 
				<g:Anchor  addStyleNames="{style.anchor}  {style.hello-logout}" ui:field="AdminPage">Admin</g:Anchor>
				<g:Anchor  addStyleNames="{style.anchor}  {style.hello-logout}" ui:field="logout">Logout</g:Anchor>
			</g:HTMLPanel>
		</g:north>
		<g:center>
		<g:AbsolutePanel></g:AbsolutePanel>
	  	</g:center>
     
		</g:DockLayoutPanel>

 </ui:UiBinder> 