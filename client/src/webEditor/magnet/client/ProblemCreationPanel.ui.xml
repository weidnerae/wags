<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">   
	<ui:style>
		.creatorButton{
			height: 50px;
			width: 250px;
		}
		.roundedButton{
			width: 98%;
		}
		.fillingTextBox{
			width: 100%;
		}
		.fillingTextArea{
			width: 100%;
		}
		.floatRight{
			float: Right;
			padding-right: 5px;
		}
		.centeredLabel {
			padding-bottom: 5px;
			text-align: center;
			
		}
		.titleDescPanel {
			border: 1px solid;
			background: WhiteSmoke;
			margin: 5px 0px 5px 0px;
			padding: 10px;
			border-radius: 5px;
			width: 100%;
		}
		.magnetCreationPanel {
			border: 1px solid;
			background: #dbdbdb;
			margin: 5px 0px 10px 0px;
			padding: 10px;
			border-radius: 5px;
		}

	</ui:style>
	<g:LayoutPanel>
	<g:layer left="0" right="45%">
		<g:VerticalPanel width="98%">
		    <g:VerticalPanel styleName="{style.titleDescPanel}">
				<g:VerticalPanel width="98%">
					<g:Label styleName="{style.centeredLabel}" text="Title:" width="50px"/>
					<g:TextBox styleName="{style.fillingTextBox}" ui:field="titleTxtBox"/>
				</g:VerticalPanel>
				<g:VerticalPanel width="98%">
					<g:Label styleName="{style.centeredLabel}" text="Desc:" width="50px"/>
					<g:TextArea visibleLines="5" styleName="{style.fillingTextArea}" ui:field="descriptionTxtArea"/>
				</g:VerticalPanel>
			</g:VerticalPanel>
			<g:VerticalPanel styleName='{style.magnetCreationPanel}' width ="100%">
				<g:VerticalPanel width="100%">
					<g:Label text="TOP" styleName='{style.centeredLabel}'/>
					<g:HorizontalPanel height="100%" width="100%">
						<g:Label text="Label:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="topLabelTxtBox"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel width="100%">
						<g:Label text="Real:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="topRealCodeTxtBox"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel width="100%">
						<g:Label text="Hidden:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="topHiddenCodeTxtBox"/>
					</g:HorizontalPanel>
				</g:VerticalPanel>
				<g:VerticalPanel width="100%">
					<g:Label text="BOTTOM" styleName='{style.centeredLabel}'/>
					<g:HorizontalPanel height="100%" width="100%">
						<g:Label text="Label:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="bottomLabelTxtBox"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel width="100%">
						<g:Label text="Real:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="bottomRealCodeTxtBox"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel width="100%">
						<g:Label text="Hidden:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="bottomHiddenCodeTxtBox"/>
					</g:HorizontalPanel>
				</g:VerticalPanel>
				<g:VerticalPanel width="100%">
				    <g:HorizontalPanel width="100%">
						<g:Label text="Comment:" width="50px"/>
						<g:TextBox styleName='{style.fillingTextBox}' ui:field="commentsTxtBox"/>
					</g:HorizontalPanel>
					<g:Button ui:field="createCommentsButton" styleName="{style.floatRight}">Add</g:Button>
				</g:VerticalPanel>
				<g:Label text="Current Comments:"/>
				<g:TextArea width="98%" enabled="false" ui:field="commentsStagingArea"/>
			</g:VerticalPanel>
			<g:HorizontalPanel width="100%">
				<g:Button styleName='{style.roundedButton}' ui:field="classDeclarationButton">Class</g:Button>
				<g:Button styleName='{style.roundedButton}' ui:field="innerFunctionsButton">Function</g:Button>
				<g:Button styleName='{style.roundedButton}' ui:field="statementsButton">Statement</g:Button>
				<g:Button styleName='{style.roundedButton}' ui:field="clearDataButton">Clear</g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:layer>
	<g:layer left="55%" right="0">
		<g:VerticalPanel width="98%">
			<g:FormPanel ui:field="problemCreateFormPanel">
				<g:VerticalPanel width="100%" height="100%">
					<g:Label text="Title:"/>
					<g:TextArea name="title" ui:field="finalTitleTxtBox" width="100%" readOnly="true"/>
					<g:Label text="Description:"/>
					<g:TextArea name="desc" ui:field="finalDescriptionTxtArea" width="100%" visibleLines="5" readOnly="true"/>
					<g:Label text="Class:"/>
					<g:TextArea name="class" ui:field="classDeclarationTxtArea" width="100%" visibleLines="5" readOnly="true"/>
					<g:Label text="Functions:"/>
					<g:TextArea name="functions" ui:field="innerFunctionsTxtArea" width="100%" visibleLines="5" readOnly="true"/>
					<g:Label text="Statements:"/>
					<g:TextArea name="statements" ui:field="statementsTxtArea" width="100%" visibleLines="5" readOnly="true"/>
					<g:HorizontalPanel>
						<g:Label text="Testing Class:" width="150px"/>
						<g:FileUpload name="testClass" ui:field="solutionUpload"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label text="Helper Class:" width="150px"/>
						<g:FileUpload name="helperClass" ui:field="helperUpload"/>
					</g:HorizontalPanel>
					<g:SubmitButton ui:field="createProblemSubmitButton">Create</g:SubmitButton>
				</g:VerticalPanel>
			</g:FormPanel>
		</g:VerticalPanel>
	</g:layer>
	</g:LayoutPanel>

</ui:UiBinder> 