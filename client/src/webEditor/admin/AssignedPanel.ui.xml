<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title {
			padding-bottom: 8px;
			padding-top: 8px;
			font-size: x-large;
			font-family: helvetica;	
			text-align: center;
		}
		.assignedTxt{
			height: 250px;
			width: 100%;
			white-space: nowrap;
		}
		.button {
			width: 100%;
			margin: 3px 0px 3px 0px;
		}
	</ui:style>
	<g:VerticalPanel width="100%">
		<g:Label styleName="{style.title}" ui:field="title"/>
		<g:TextArea styleName="{style.assignedTxt}" ui:field="txtAreaAssigned" readOnly="true"/>
		<g:Button ui:field="btnAssign" styleName="{style.button}" visible="false">Add to Assigned</g:Button>
		<g:Button ui:field="btnClearAssign" styleName="{style.button}" visible="false">Clear Assigned</g:Button>
		<g:Button ui:field="btnClearSel" styleName="{style.button}" visible="false">Clear Selected</g:Button>
	</g:VerticalPanel>
</ui:UiBinder> 