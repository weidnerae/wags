<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.admin">
	<ui:style> 

		.item {
			font-weight: bolder;
    		font-family: arial, verdana, san-serif;
    		text-align: center;
    		background-color: #4A6713;
    		color: white;
    		width: 10em;
			height: 9.26em;
			position:relative;
 			cursor: pointer;
     		border-bottom: 3px solid black;
			border-left: 3px solid black;
		}

		.admin_menu {
			top: 0px;
            background: #4A6713;
			border-left: 5px solid black;
			border-bottom: 5px solid black;
	    }

		.item:focus {
			outline: none;
		}
		
		.layout {
			margin-top:0em;
			margin-bottom:0em;
			margin-left:0em;
			margin-right:40em;
			width:1820px;
		}
		
		.content {
			overflow: auto;
		}
	</ui:style>
	<g:LayoutPanel ui:field="layout" 
		addStyleNames ="{style.layout}">
		<g:layer left="0px" right="0em" top="0em" bottom="0px">
			<g:VerticalPanel height="100%" ui:field="menu" styleName="{style.admin_menu}">
				
				<g:Button ui:field="logic_m_btn" styleName="{style.item}">Logical Problem Management</g:Button>
				
				<g:Button ui:field="logic_c_btn" styleName="{style.item}">Logical Problem Creation</g:Button>
				
				<g:Button ui:field="magnet_m_btn" styleName="{style.item}">Magnet Problem Management</g:Button>
				
				<g:Button ui:field="magnet_c_btn" styleName="{style.item}">Magnet Problem Creation</g:Button>
				
				<g:Button ui:field="prog_btn" styleName="{style.item}">Programming Problem Management</g:Button>
				
				<g:Button ui:field="student_btn" styleName="{style.item}">Student Management</g:Button>
				
				<g:Button ui:field="review_btn" styleName="{style.item}">Review Problems</g:Button>
				
				<g:Button ui:field="section_btn" styleName="{style.item}" visible="false">Section Management</g:Button>
			     
			</g:VerticalPanel>
		</g:layer>
		<g:layer left="8%" right="0em" top="1em" bottom="0em">
		    <g:AbsolutePanel height="100%" width="100%" styleName="{style.content}" ui:field="content">
			</g:AbsolutePanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 