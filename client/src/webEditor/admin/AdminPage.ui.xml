<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.admin">
	<ui:style> 
		.item {
			    font-weight: bolder;
    			font-family: arial, verdana, san-serif;
    			font-size: 16px;
    			text-align: center;
    			background-color: rgb(50,92,116);
    			color: white;
    			width: 100%;
    			height: 100%;
 			    -webkit-border-top-left-radius: 15px;
    			-webkit-border-bottom-left-radius: 15px;
			    -moz-border-radius-topleft: 15px;
			    -moz-border-radius-bottomleft: 15px;
			    border-top-left-radius: 15px;
			    border-bottom-left-radius: 15px;
			    position:relative;
			    -webkit-transition: all 0.1s;
			    -moz-transition: all 0.1s;
			    transition: all 0.1s;
 			    -webkit-box-shadow: 0px 9px 0px rgb(0, 80, 100);
			    -moz-box-shadow: 0px 9px 0px rgb(0, 80, 100);
 			    box-shadow: 0px 9px 0px rgb(0, 80, 100);
  			    margin: 0, auto;
 			    padding: 4px;
 			    cursor: pointer;
     			border: 2px solid black;
		}
		
		.item:focus {
			outline: none;
		}
		
		.layout {
			margin: 10px auto 10px auto;
		}
		
		.content {
			overflow: auto;
		}
	</ui:style>
	<g:LayoutPanel width="1280px" ui:field="layout" 
		addStyleNames="{style.layout}">
		<g:layer left="0px" right="1130px" top="0px" bottom="0px">
			<g:VerticalPanel height="100%" ui:field="menu">
				<g:Button ui:field="logic_m_btn" styleName="{style.item}">Logical Problem Management</g:Button>
				<g:Button ui:field="logic_c_btn" styleName="{style.item}">Logical Problem Creation</g:Button>
				<g:Button ui:field="magnet_m_btn" styleName="{style.item}">Magnet Problem Management</g:Button>
				<g:Button ui:field="magnet_c_btn" styleName="{style.item}">Magnet Problem Creation</g:Button>
				<g:Button ui:field="prog_btn" styleName="{style.item}">Programming Problem Management</g:Button>
				<g:Button ui:field="student_btn" styleName="{style.item}">Student Management</g:Button>
				<g:Button ui:field="review_btn" styleName="{style.item}">Review Problems</g:Button>
				<g:Button ui:field="section_btn" styleName="{style.item}" visible="false">Section Management</g:Button>
			</g:VerticalPanel>
		</g:layer>
		<g:layer left="150px" right="0px" top="0px" bottom="0px">
		    <g:AbsolutePanel height="100%" width="100%" styleName="{style.content}" ui:field="content">
			</g:AbsolutePanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 