<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.admin.builders">
	<ui:style>
		.txtAlign{
			padding-top: 5px;
		}
	</ui:style>
	<g:VerticalPanel ui:field="basePanel">
		<g:HorizontalPanel>
			<my:BasicBuilder ui:field="canvas"/>
			<g:VerticalPanel>
				<g:HorizontalPanel width="100%">
					<g:Label styleName="{style.txtAlign}">Add Node: </g:Label>
					<g:TextBox ui:field="txtAddNode" width="20px" maxLength="1"/>
				</g:HorizontalPanel>
				<g:Button ui:field="btnAddNode">Add</g:Button>
			</g:VerticalPanel>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 