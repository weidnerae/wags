<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.admin.builders">
	<ui:style>
		.txtAlign{
			padding-top: 5px;
			width: 80px;
		}
		.longBox{
			width:200px;
		}
		.toRight{
			float: right;
		}
		.rightMargin{
			margin-top: 5px;
			margin-right: 5px;
		}
		.leftMargin{
			margin-top: 5px;
			margin-left: 5px;
		}
		.topMargin{
			margin-top: 5px;
		}
	</ui:style>
	<g:VerticalPanel ui:field="basePanel">
		<g:TextArea ui:field="txtInstructions" visibleLines="10" width="99%"></g:TextArea>
		<my:BasicCanvas ui:field="canvas"/>
		<g:HorizontalPanel width="100%">
			<g:HorizontalPanel width="35%">
				<g:Label styleName="{style.txtAlign}">Add Node: </g:Label>
				<g:TextBox ui:field="txtAddNode" width="30px" styleName="{style.rightMargin}" maxLength="1"/>
				<g:Button ui:field="btnAddNode" width="50px" styleName="{style.rightMargin}">Add</g:Button>
				<g:Button ui:field="btnDeleteNode" width="50px" styleName="{style.leftMargin}">Delete</g:Button>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="65%" styleName="{style.toRight}">
				<g:Button styleName="{style.topMargin}" ui:field="btnCalculate">Calculate Results</g:Button>
				<g:Button styleName="{style.topMargin}" ui:field="btnReset">Reset</g:Button>
			</g:HorizontalPanel>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label styleName="{style.txtAlign}">Title: </g:Label>
			<g:TextBox ui:field="txtTitle" styleName="{style.longBox}"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label styleName="{style.txtAlign}">Instructions: </g:Label>
			<g:TextArea visibleLines="5" width="515px" ui:field="txtDesc"/>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 