<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.dom.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.lbox{
			width: 135px;
			padding-left: 10px;	
		}
	</ui:style>
	<g:VerticalPanel>
		<g:Label>Email: </g:Label><g:TextBox ui:field="email" />
		<g:Label>Username: </g:Label><g:TextBox ui:field="username" />
		<g:Label>First Name:</g:Label><g:TextBox ui:field="firstName"/>
		<g:Label>Last Name:</g:Label><g:TextBox ui:field="lastName"/>
		<g:Label>Password: </g:Label><g:PasswordTextBox ui:field="password" />
		<g:Label>Re-enter password: </g:Label><g:PasswordTextBox ui:field="passwordConfirm" />
		<g:Label ui:field="passwordStatus" />
		<g:Label>Section: </g:Label>
		<g:ListBox ui:field="sections" styleName="{style.lbox}"></g:ListBox>
		<g:Button styleName="{style.important}" ui:field="registerButton" />
	</g:VerticalPanel>
	
</ui:UiBinder> 