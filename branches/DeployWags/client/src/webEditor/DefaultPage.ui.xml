<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.button {
			font-weight: bold;
			margin-left:5px;
			margin-right:5px;
			margin-top: 10px;
			position: relative;
			height: 50px;
			width: 140px;
			padding: 12px;
			text-align: center;
		}
		
		.logout_button {
			font-weight: bold;
			margin-left:5px;
			margin-right:5px;
			margin-top: 10px;
			position: relative;
			height: 40px;
			width: 140px;
			padding: 12px;
			text-align: center;
		}
		
		.columns {
			padding:0.2em;
		}
		
		.label {
			width: 5em;
			display: block;
			float: left;
			margin-right: 0.5em;
			text-align: left;
		}
		
		.title1 { 
			font-size: 14em; 
			font-weight: light;
			font-style: italic;
			font-family: console;
			color: #325C74;
			vertical-align: top;
		}
		
		.title2 { 
			font-size: 3em;
			font-weight: light;
			font-family: console;
			color: #325C74;
			vertical-align: top;
			padding-bottom:0.5em;
		}

	</ui:style>
	
 	<g:VerticalPanel horizontalAlignment='ALIGN_CENTER' height="1%" width="100%">
		<g:Label styleName="{style.title1}">Wags</g:Label>
		<g:Label styleName="{style.title2}">Web Automatic Grading System</g:Label>
		<g:VerticalPanel>
			<g:Button styleName="{style.button}" ui:field='editorButton'>Web Editor</g:Button>
			<g:Button styleName="{style.button}" ui:field='logicalButton'>Logical Microlabs</g:Button>
			<g:Button styleName="{style.button}" ui:field='magnetButton'>Magnet Microlabs</g:Button>
			<g:Button styleName="{style.button}" ui:field='adminButton' visible='false'>Admin Panel</g:Button>
			<g:Button styleName="{style.logout_button}" ui:field='logoutButton'>Log out</g:Button>
		</g:VerticalPanel>
	</g:VerticalPanel>

	
</ui:UiBinder> 