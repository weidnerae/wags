<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.label {
			text-align: left;
			display:block;
			width:150px;
			float: left;
		}
		.chkbox{
			height:35px;
			text-align: center;	
		}
		.lowlabel{
			padding-top: 6px;	
		}
		.filePanel {
			height: 35px;
			text-align: center;	
		}
		.heading{
			padding-top: 20px;
			padding-bottom: 20px;
			padding-left: 80px;
			font-size: 	x-large;
			width: 100%;
			font-family: helvetica;
		}
		.hint{
			font-size: x-small;
			font-family: sans-serif;
			color: #444444;	
		}
		.subheading{
			padding-bottom: 8px;
			padding-top: 8px;
			font-size: x-large;
			font-family: helvetica;	
		}
		.button{
			padding: 12px;
		}
		.administration{
			background-color: #C2C2FF;	
			margin-bottom: 10px;
		}
		.lbox{
			width: 130px;
			padding-left: 10px;	
			margin-right: 10px;
		}
		.grid{
			height: 100%;
			background-color: #FFFFFF;
		}
		.upload{
			float: left;
		}
		.tbox{
			float:left;
			width:160px;
			margin: 0;
			padding: 0;	
		}
		.button{
			padding: 5px;	
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.administration}" width="100%" height="100%">
		<g:FormPanel ui:field="adminForm">
			<g:VerticalPanel>
					
				<g:Label styleName="{style.subheading}"> Uploading </g:Label>
				
				<g:HorizontalPanel styleName="{style.filePanel}">
					<g:Label styleName="{style.label}"> Exercise Name: </g:Label>
					<g:TextBox styleName="{style.tbox}" ui:field="fileName" name="fileName"> </g:TextBox>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel styleName="{style.filePanel}">
					<g:Label styleName="{style.label}"> Solution: </g:Label>
					<g:FileUpload styleName="{style.upload}" ui:field="solution" name="Solution"></g:FileUpload>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel styleName="{style.filePanel}">
					<g:Label styleName="{style.label}"> Skeleton: </g:Label>
					<g:FileUpload styleName="{style.upload}" ui:field="skeleton" name="Skeleton"></g:FileUpload>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel styleName="{style.filePanel}">
					<g:Label styleName="{style.label}"> Testing Class: </g:Label>
					<g:FileUpload styleName="{style.upload}" ui:field="testClass" name="TestClass"></g:FileUpload>
				</g:HorizontalPanel>
				
				<g:Label styleName="{style.hint}" >Format: DD monthName YYYY HH:MM:SS</g:Label>
				
				<g:HorizontalPanel styleName="{style.filePanel}">
					<g:Label styleName="{style.label}"> Opens at: </g:Label>
					<g:TextBox styleName="{style.tbox}" ui:field="openDate" name="openDate"> </g:TextBox>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel styleName="{style.filePanel}">
					<g:Label styleName="{style.label}"> Closes at: </g:Label>
					<g:TextBox styleName="{style.tbox}" ui:field="closeDate" name="closeDate"> </g:TextBox>
				</g:HorizontalPanel>
				
				<!-- <g:HorizontalPanel>
					<g:CheckBox styleName="{style.chkbox}" ui:field="visible" name="visible">Make Visible</g:CheckBox>
					<g:CheckBox styleName="{style.chkbox}" ui:field="multiUser" name="multiUser">Enable Partners</g:CheckBox>
				</g:HorizontalPanel>  -->
				
				<g:HorizontalPanel styleName="{style.filePanel}">
					<g:SubmitButton ui:field="addButton"> Add Exercise </g:SubmitButton>
					<!-- <g:Label styleName="{style.lowlabel}">Click twice to add skeletons</g:Label>  -->
				</g:HorizontalPanel>
				
			</g:VerticalPanel>
		</g:FormPanel>
		 
		<g:FormPanel ui:field="helperForm">
			<g:VerticalPanel>
			
				<g:Label styleName="{style.subheading}">Programming Microlab Actions</g:Label>
				
				<g:ListBox ui:field="exercises" name="Exercises" styleName="{style.lbox}"></g:ListBox>
					
				<g:HorizontalPanel styleName="{style.filePanel}">
					<g:Button ui:field="btnAdminReview" styleName="{style.button}"> Review </g:Button>
					<g:Button ui:field="btnAddSkeletons" styleName="{style.button}"> Distribute Student Skeletons</g:Button>
					<g:Button ui:field="btnMakeVisible" styleName="{style.button}"> Toggle Visibility</g:Button>
					<g:Button ui:field="btnDeleteExercise" styleName="{style.button}"> Delete </g:Button>
				</g:HorizontalPanel>
				
				<g:Grid ui:field="grdAdminReview" styleName="{style.grid}"> </g:Grid>
				
				<g:HorizontalPanel styleName="{style.filePanel}">
					<g:Label styleName="{style.label}"> Helpers:</g:Label>
					<g:FileUpload ui:field="helperClass" name="HelperClass"></g:FileUpload>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel styleName="{style.filePanel}">
					<g:Label styleName="{style.label}"> Description: </g:Label>
					<g:FileUpload styleName="{style.upload}" ui:field="descriptionPDF" name="descriptionPDF"></g:FileUpload>
				</g:HorizontalPanel>
				
				<g:SubmitButton ui:field="sbtHelper"> Upload Class </g:SubmitButton>
				
			</g:VerticalPanel>
		</g:FormPanel>
		
		<g:VerticalPanel>
			<g:Label styleName="{style.subheading}">Logical Microlab Actions</g:Label>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:ListBox ui:field="logicalExercises" name="logicalExercises" styleName="{style.lbox}"></g:ListBox>
				<g:Button ui:field="btnDSTReview" styleName = "{style.button}"> Review </g:Button>
			</g:HorizontalPanel>
			
			<g:Grid ui:field="grdDSTReview" styleName="{style.grid}"> </g:Grid>
			
			
			<g:HorizontalPanel>
				<g:Label styleName="{style.label}">Subject:</g:Label>
				<g:ListBox ui:field="lstLSubjects" styleName="{style.lbox}"></g:ListBox>					
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label styleName="{style.label}">Group:</g:Label>
				<g:ListBox ui:field="lstLGroups" styleName="{style.lbox}"></g:ListBox>					
			</g:HorizontalPanel>
			<g:VerticalPanel ui:field="lmPanel"></g:VerticalPanel>
			
			<g:Button ui:field="btnSetDST" styleName="{style.button}"> Set Exercises </g:Button>
		</g:VerticalPanel>
		
		<g:VerticalPanel>
			<g:Label styleName="{style.subheading}">Magnet Microlab Actions</g:Label>
			<g:HorizontalPanel styleName="{style.filePanel}">
				<g:ListBox ui:field="lstMagnetExercises" name="lstMagnetExercises" styleName="{style.lbox}"></g:ListBox>
				<g:Button ui:field="btnMagnetReview" styleName = "{style.button}"> Review </g:Button>
			</g:HorizontalPanel>
			
			<g:ListBox ui:field="magnetExercises" name="magnetExercises" styleName="{style.lbox}"></g:ListBox>
			<g:VerticalPanel ui:field="magnetSelectionPanel"></g:VerticalPanel>
			
			<g:Grid ui:field="grdMagnetReview" styleName="{style.grid}"> </g:Grid>
							
			<g:Button ui:field="btnMagnet" styleName="{style.button}"> Set Magnets </g:Button>
		</g:VerticalPanel>
		
		
		<g:FormPanel ui:field="formCompReview">
			<g:VerticalPanel>
				<g:Label styleName="{style.subheading}">Comprehensive Review</g:Label>
				<g:SubmitButton ui:field="sbtCompReview" styleName="{style.button}">Review</g:SubmitButton>
			</g:VerticalPanel>
		</g:FormPanel>
		

	</g:VerticalPanel>
	
</ui:UiBinder> 