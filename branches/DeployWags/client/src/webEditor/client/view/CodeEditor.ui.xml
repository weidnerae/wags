<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.client">
	
	<ui:style>
		.unenabled {
			background-color: #C8C8C8;
		}
	</ui:style>

	<g:VerticalPanel height="100%" width="100%">
		<g:ScrollPanel height="100%" width="100%">
			<g:RichTextArea styleName="{style.unenabled}" height="98%" width="99%" ui:field="codeTop"></g:RichTextArea>
		</g:ScrollPanel>
		<g:ScrollPanel height="100%" width="100%">
			<g:RichTextArea height="98%" width="99%" ui:field="codeArea" > </g:RichTextArea>
		</g:ScrollPanel>
		<g:ScrollPanel height="100%" width="100%">
			<g:RichTextArea styleName="{style.unenabled}" height="98%" width="99%" ui:field="codeBottom"></g:RichTextArea>
		</g:ScrollPanel>
	</g:VerticalPanel>
</ui:UiBinder> 