<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.client.view">
	
	<ui:style>
		.dock { 
			margin-top: 25px;
		}
			
		.hello { 
			vertical-align: middle; 
			padding-right: 5px; 
			display: inline;
		}	
		
		.hello-logout { 
			border-bottom: 5px solid #E3E3E3; 
			width: 100%; 
			text-align: right;
		}
		
		.anchor { 
			cursor: pointer; 
		}
		
		.anchor:hover { 
			text-decoration: underline; 
		}
		
		.title { 
			font-size: 3em;
			font-weight: light;
			font-style: italic;
			color: #A0A0FF;
			z-index: 9999;
			position: relative;
			vertical-align: top;
			top: -10px;
			display: inline;
			float:left;
		 }
		 
		.codeAndFile { 
			height: 100%;
			width: 100%;
			border: 0px;
			padding: 0px;
		 }
		 
		 .editor { 
			height: 100%;
			width: 100%;
			border: 0px;
			padding: 0px;
		 }
		 
		 .reviewer { 
			height: 100%;
			width: 100%;
			border: 0px;
			padding: 0px;
		 }
		 
		 .administration {
			background-color: #C2C2FF;
		 }
		
		 .file {
		 	border-bottom: 2px solid #C3C3C3;
		 }
		 
		.fileName { 
			padding: 0px; 
		}
		
		.std-txt { 
			padding-top: 6px 
		}
			
	</ui:style>
	
	<g:DockLayoutPanel unit="EM" styleName="{style.dock}" ui:field="dock">
		<g:north size="3">
			<g:HTMLPanel styleName="{style.hello-logout}">
				<g:Label styleName="{style.title}">WAGS</g:Label>
				<g:Label styleName="{style.hello}" ui:field="hello"></g:Label>
				<g:Anchor addStyleNames="{style.anchor} {style.hello}" ui:field="DST">DST</g:Anchor> 
				<g:Anchor addStyleNames="{style.anchor} {style.hello}" ui:field="logout">Logout</g:Anchor>
			</g:HTMLPanel>
		</g:north>
		<g:center>
			<g:LayoutPanel>
		 		<g:layer left='0%' right='50%'>
			 		<g:DockLayoutPanel unit="EM" styleName="{style.codeAndFile}">
						<g:north size="2.1">
							<g:FormPanel styleName="{style.file}" ui:field="wrapperForm">
								<g:HTMLPanel>
									<g:TextBox styleName="{style.fileName}" ui:field="fileName"></g:TextBox>
									<g:Anchor ui:field="save" styleName="{style.anchor}">Save</g:Anchor>
									<g:Anchor ui:field="delete" styleName="{style.anchor}">Delete</g:Anchor>
									<g:Anchor ui:field="getCode" styleName="{style.anchor}"> Code </g:Anchor>
									<g:Button ui:field="submit" styleName="{style.anchor}">Submit</g:Button>
								</g:HTMLPanel>
							</g:FormPanel>
						</g:north>
						<g:center>
							<!-- <g:ScrollPanel>  -->
								<my:CodeEditor styleName="{style.editor}" ui:field="editor"></my:CodeEditor>
							<!-- </g:ScrollPanel>  -->
						</g:center>
					</g:DockLayoutPanel>
				</g:layer>
				<g:layer left='50%' right='0%'>
					<g:TabLayoutPanel width="100%" height="100%" barUnit="EM" barHeight="2" ui:field="tabPanel">
						<g:tab>
							<g:header> FileBrowser </g:header>
							<g:ScrollPanel>
								<my:FileBrowser ui:field="browser">	</my:FileBrowser>
							</g:ScrollPanel>
						</g:tab>
						<g:tab>
							<g:header> Review </g:header>
							<g:LayoutPanel>
								<g:layer>
									<!-- <g:ScrollPanel> -->
										<my:OutputReview styleName="{style.reviewer}" ui:field="review"></my:OutputReview>
									<!-- </g:ScrollPanel>  -->
								</g:layer>
							</g:LayoutPanel>
						</g:tab>
						<g:tab>
							<g:header> Exercises </g:header>
							<g:ScrollPanel styleName="{style.administration}">
								<my:Admin ui:field="admin"></my:Admin>
							</g:ScrollPanel>
						</g:tab>
						<g:tab>
							<g:header> Students </g:header>
							<g:ScrollPanel styleName="{style.administration}">
								<my:Students ui:field="students"></my:Students>
							</g:ScrollPanel>
						</g:tab>
						<g:tab>
							<g:header> Desc </g:header>
							<g:Image ui:field="description" altText="desc.."> </g:Image>
						</g:tab>
					</g:TabLayoutPanel>
				</g:layer>
     		</g:LayoutPanel>
     	</g:center>
     </g:DockLayoutPanel>
 </ui:UiBinder> 