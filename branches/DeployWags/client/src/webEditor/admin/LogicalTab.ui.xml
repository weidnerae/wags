<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.admin">
	<ui:style>
		.btns_panel {
			width: 100%;
		}
		
		.assigned_panel {
			padding-right: 5px;
		}
		
		.section {
			width: 100%;
		}
	</ui:style>
	
	<g:LayoutPanel height="100%" width="100%">
		<g:layer left='0px' right='890px'>
			<g:ScrollPanel styleName='{style.section}'>
				<my:ButtonPanel styleName="{style.btns_panel}" ui:field="btnPanelSubjects"/>
			</g:ScrollPanel>
		</g:layer>
		<g:layer left='240px' right='650px'>
			<g:ScrollPanel styleName='{style.section}'>
				<my:ButtonPanel styleName="{style.btns_panel}" ui:field="btnPanelGroups" />
			</g:ScrollPanel>
		</g:layer>
		<g:layer left='480px' right='325px'>
			<g:ScrollPanel styleName='{style.section}'>
				<my:CheckBoxPanel ui:field="chkPanelExercises" />
			</g:ScrollPanel>
		</g:layer>
		<g:layer left='805px' right='0px'>
			<g:ScrollPanel styleName='{style.section}'>
				<g:AbsolutePanel>
					<my:AssignedPanel styleName="{style.assigned_panel}" ui:field="assigned"/>
					<my:AssignedPanel styleName="{style.assigned_panel}" ui:field="selected"/>
				</g:AbsolutePanel>
			</g:ScrollPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 