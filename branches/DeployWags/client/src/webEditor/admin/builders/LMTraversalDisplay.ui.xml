<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.admin.builders">
	<ui:style>
		.txtAlign{
			padding-top: 5px;
			width: 80px;
		}
		.longBox{
			width:200px;
		}
		.toRight{
			float: right;
		}
	</ui:style>
	<g:VerticalPanel ui:field="basePanel">
		<my:BasicBuilder ui:field="canvas"/>
		<g:HorizontalPanel width="100%">
			<g:HorizontalPanel>
				<g:Label styleName="{style.txtAlign}">Add Node: </g:Label>
				<g:TextBox ui:field="txtAddNode" width="20px" maxLength="1"/>
				<g:Button ui:field="btnAddNode">Add</g:Button>
				<g:Button ui:field="btnDeleteNode">Delete</g:Button>
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.toRight}">
				<g:Button styleName="{style.toRight}" ui:field="btnGetTraversals">Calculate Traversals</g:Button>
				<g:Button styleName="{style.toRight}" ui:field="btnReset">Reset</g:Button>
			</g:HorizontalPanel>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label styleName="{style.txtAlign}">Title: </g:Label>
			<g:TextBox ui:field="txtTitle" styleName="{style.longBox}"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label styleName="{style.txtAlign}">Instructions: </g:Label>
			<g:TextArea visibleLines="5" width="515px" ui:field="txtDesc"/>
		</g:HorizontalPanel>
		<my:TraversalPanel ui:field="inorderPanel"/>
		<my:TraversalPanel ui:field="preorderPanel"/>
		<my:TraversalPanel ui:field="postorderPanel"/>
	</g:VerticalPanel>
</ui:UiBinder> 