<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:us='urn:import:webEditor.magnet.view'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	
	.button {
		margin-right: 1%;
		padding-top: 2px;
		min-width:22.5%
	}
	.base{
		margin-right: .5%;
		margin-left: 1%;
		overflow: auto;
		height: 100%;
		width: 100%;
	}
	.scroll{
		width: 99%;
		height:100%;
	}
	.main{
		height:100%;
	}
	.buttonArea {
		height:5%;
	}
	.codeArea {
		height:95%;
	}
	</ui:style>
	
    <b:FluidRow ui:field='layoutPanel' styleName='{style.base}'>
        <b:FluidRow addStyleNames="{style.codeArea}">
        		<g:ScrollPanel ui:field='nestPanel' styleName='{style.scroll}'>
        			<b:FluidRow ui:field='mainPanel' styleName='{style.main}'></b:FluidRow>
        		</g:ScrollPanel>
        </b:FluidRow>
        <b:FluidRow addStyleNames="{style.buttonArea}">
            <b:FluidRow>
        		<b:Button type="DEFAULT" size="LARGE" icon="CHECK" ui:field="button" addStyleNames='{style.button}'>Finalize</b:Button>
        		<b:Button type="DEFAULT" size="LARGE" icon="SAVE" ui:field = "stateButton" addStyleNames='{style.button}'>Save State</b:Button>
        		<b:Button type="DEFAULT" size="LARGE" icon="TRASH" ui:field="resetButton" addStyleNames='{style.button}'>Reset</b:Button>
        	</b:FluidRow>
        </b:FluidRow>
    </b:FluidRow>
</ui:UiBinder> 

