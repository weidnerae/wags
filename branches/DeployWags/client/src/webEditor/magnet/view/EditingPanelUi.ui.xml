<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.base_panel{
	min-height:100%;
	min-width:100%;
	}
	
	@external .gwt-SplitLayoutPanel-HDragger;

	.gwt-SplitLayoutPanel-HDragger { 
	width: 5px !important;
	background: grey;
	}
		
	@external .gwt-SplitLayoutPanel-VDragger;
	
	.gwt-SplitLayoutPanel-VDragger {
    width: 5px !important;
	background: grey;
	}
	
		
	</ui:style>

	<g:SplitLayoutPanel ui:field="layout" styleName='{style.base_panel}'>
		<g:east size="550">
			<g:LayoutPanel ui:field="codePanel"></g:LayoutPanel>
		</g:east>
		<g:center>
			<g:LayoutPanel ui:field="constructPanel"></g:LayoutPanel>
		</g:center>
	</g:SplitLayoutPanel>
</ui:UiBinder> 