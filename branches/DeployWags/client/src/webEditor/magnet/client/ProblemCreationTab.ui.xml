<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.label {
			text-align: left;
			display:block;
			width:150px;
			float: left;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:FormPanel ui:field="problemCreateForm">
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:Label styleName="{style.label}">Title:</g:Label>
					<g:TextBox name="probTitle" ui:field="txtProbTitle"></g:TextBox>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label styleName="{style.label}">Description:</g:Label>
					<g:TextArea name="probDesc" ui:field="txtProbDesc"></g:TextArea>
				</g:HorizontalPanel>
				<g:SubmitButton ui:field="sbtPCForm">Create Problem</g:SubmitButton>
			</g:VerticalPanel>
		</g:FormPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 