<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">   
	<ui:style>
		.column_header{
			font-weight: bold;
			font-size:20px
		}
		.column{
			border:1px solid black;
			padding:5px;
			min-height:500px;
			text-align:center;
		}
		.label {
			text-align: left;
			display:block;
			width:100px;
			float: left;
		}
		.creatorButton{
			height: 50px;
			width: 250px;
		}
		.labelBoxGroup{
			padding-top:10px;
			padding-bottom:10px;
		}
		.fieldTextBox{
			width: 400px;
		}
		.descTxtArea{
			width:400px;
			height:100px;
			overflow:auto;
		}
		.accumulatorTextArea{
			min-width:300px;
			min-height:200px;
			overflow:auto;
		}
		.fillingTextBox{
			width: 100%;
		}
		.fillingTextArea{
			width: 95%;
			float: left;
		}
		.floatLeft{
			float: left;
		}
		.padded{
			padding: 10px;
		}

	</ui:style>
	<g:DockLayoutPanel>
	<g:west size="700">
		<g:VerticalPanel width="98%">
			<g:HorizontalPanel width="100%">
				<g:Label text="Title:" width="70px"/>
				<g:TextBox styleName="{style.fillingTextBox}" ui:field="titleTxtBox"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="100%">
				<g:Label text="Desc:" width="70px"/>
				<g:TextArea width="100%" ui:field="descriptionTxtArea"/>
			</g:HorizontalPanel>
			<g:DockLayoutPanel width="100%" height="100px">
				<g:west size="343">
				<g:VerticalPanel width="100%">
					<g:Label text="TOP"/>
					<g:HorizontalPanel height="100%" width="100%">
						<g:Label text="Label:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="topLabelTxtBox"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel width="100%">
						<g:Label text="Real:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="topRealCodeTxtBox"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel width="100%">
						<g:Label text="Hidden:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="topHiddenCodeTxtBox"/>
					</g:HorizontalPanel>
				</g:VerticalPanel>
				</g:west>
				<g:east size="343">
				<g:VerticalPanel width="100%">
					<g:Label text="BOTTOM"/>
					<g:HorizontalPanel height="100%" width="100%">
						<g:Label text="Label:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="bottomLabelTxtBox"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel width="100%">
						<g:Label text="Real:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="bottomRealCodeTxtBox"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel width="100%">
						<g:Label text="Hidden:" width="50px"/>
						<g:TextBox styleName="{style.fillingTextBox}" ui:field="bottomHiddenCodeTxtBox"/>
					</g:HorizontalPanel>
				</g:VerticalPanel>
				</g:east>
			</g:DockLayoutPanel>
			<g:HorizontalPanel width="100%">
				<g:Label text="Comment:" width="70px"/>
				<g:TextBox width="100%" ui:field="commentsTxtBox"/>
				<g:Button ui:field="createCommentsButton" styleName="{style.floatLeft}">Add</g:Button>
			</g:HorizontalPanel>
			<g:Label text="Current Comments:"/>
			<g:TextArea width="96%" enabled="false" ui:field="commentsStagingArea"/>
			<g:HorizontalPanel width="100%">
				<g:Button width="100%" ui:field="classDeclarationButton">Class</g:Button>
				<g:Button width="100%" ui:field="innerFunctionsButton">Function</g:Button>
				<g:Button width="100%" ui:field="statementsButton">Statement</g:Button>
				<g:Button width="100%" ui:field="clearDataButton">Clear</g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:west>
	<g:east size="500">
		<g:VerticalPanel width="98%">
			<g:FormPanel ui:field="problemCreateFormPanel">
				<g:VerticalPanel width="100%" height="100%">
					<g:Label text="Title:"/>
					<g:TextArea name="title" ui:field="finalTitleTxtBox" width="100%" readOnly="true"/>
					<g:Label text="Description:"/>
					<g:TextArea name="desc" ui:field="finalDescriptionTxtArea" width="100%" visibleLines="5" readOnly="true"/>
					<g:Label text="Class:"/>
					<g:TextArea name="class" ui:field="classDeclarationTxtArea" width="100%" visibleLines="5" readOnly="true"/>
					<g:Label text="Functions:"/>
					<g:TextArea name="functions" ui:field="innerFunctionsTxtArea" width="100%" visibleLines="5" readOnly="true"/>
					<g:Label text="Statements:"/>
					<g:TextArea name="statements" ui:field="statementsTxtArea" width="100%" visibleLines="5" readOnly="true"/>
					<g:HorizontalPanel>
						<g:Label text="Testing Class:" width="150px"/>
						<g:FileUpload name="testClass" ui:field="solutionUpload"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label text="Helper Class:" width="150px"/>
						<g:FileUpload name="helperClass" ui:field="helperUpload"/>
					</g:HorizontalPanel>
					<g:SubmitButton ui:field="createProblemSubmitButton">Create</g:SubmitButton>
				</g:VerticalPanel>
			</g:FormPanel>
		</g:VerticalPanel>
	</g:east>
	</g:DockLayoutPanel>

</ui:UiBinder> 