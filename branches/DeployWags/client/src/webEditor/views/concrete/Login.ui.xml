<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.programming.view"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		.button {
			font-weight: bold;
			height: 25px;
			width: 34%;
			text-align: center;
			margin: 10px auto auto auto;
		}
		
		.columns {
			padding:0.2em;
		}
		
		.sub_columns {
			padding:0.2em;
			width: 100%;
		}
		
		.label {
			width: 5em;
			display: block;
			float: left;
			font-size: 15px;
			margin-right: 0.5em;
			text-align: left;
		    margin-top: 3px;
		    color: white;
		    font-weight: boldest;
		    text-shadow:
		    -1px -1px 0 #000,
		    1px -1px 0 #000,
		    -1px 1px 0 #000,
		    1px 1px 0 #000;
		}
		
		.title1 { 
		    color: white;
		    text-align: center;
		    font-size: 14em;
		    font-weight: lighter;
		    font-style: italic;
		    font-family: console;
		    text-shadow:
		    -1px -1px 0 #000,
		    1px -1px 0 #000,
		    -1px 1px 0 #000,
		    1px 1px 0 #000;
		}
		
		.title2 { 
			padding-bottom: 30px;
		    color: white;
		    text-align: center;
		    font-size: 3em;
		    font-weight: lighter;
		    font-style: italic;
		    font-family: console;
		    text-shadow:
		     -1px -1px 0 #000,
		     1px -1px 0 #000,
		     -1px 1px 0 #000,
		     1px 1px 0 #000;
		}
		.header
		{
		    margin-top: 20px;
		    padding: 5px 0px 40px 0px;
		    width: 920px;
		}

		.positioning
		{
			left:21%;
			right:20%;
			width:100%;
		}


	</ui:style>
 	<g:VerticalPanel horizontalAlignment='ALIGN_CENTER' styleName="{style.positioning}" width="100%">
 		
 		<g:VerticalPanel styleName="{style.header}" horizontalAlignment='ALIGN_CENTER'> 
 		    
 		    
			<g:Label styleName="{style.title1}">Wags</g:Label>
			<g:Label styleName="{style.title2}">Web Automated Grading System</g:Label>

			<g:VerticalPanel styleName="{style.columns}" horizontalAlignment='ALIGN_CENTER'>
				<g:HorizontalPanel styleName="{style.sub_columns}">
					<g:Label styleName="{style.label}">Account: </g:Label>
					<g:TextBox ui:field="username" />
				</g:HorizontalPanel>
				
				<g:HorizontalPanel styleName="{style.sub_columns}">
					<g:Label styleName="{style.label}">Password: </g:Label>
					<g:PasswordTextBox ui:field="password" />
				</g:HorizontalPanel>
				<g:Button styleName="{style.button}" ui:field="loginButton" />
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 