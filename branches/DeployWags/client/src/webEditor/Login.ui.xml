<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:webEditor.programming.view">
	<ui:style>
		.button {
			font-weight: bold;
			font-size: 15px;
			height: 25px;
			width: 34%;
			text-align: center;
			border-radius: 5px;
			margin: 10px auto auto auto;
		}
		
		.columns {
			padding:0.2em;
		}
		
		.sub_columns {
			padding:0.2em;
			width: 100%;
		}
		
		.label {
			width: 5em;
			display: block;
			float: left;
			font-size: 15px;
			margin-right: 0.5em;
			text-align: left;
		    margin-top: 5px;
		    color: white;
		    font-weight: boldest;
		    text-shadow:
		    -1px -1px 0 #000,
		    1px -1px 0 #000,
		    -1px 1px 0 #000,
		    1px 1px 0 #000;
		}
		
		.title1 { 
		    color: white;
		    text-align: center;
		    font-size: 14em;
		    font-weight: lighter;
		    font-style: italic;
		    font-family: console;
		    text-shadow:
		    -1px -1px 0 #000,
		    1px -1px 0 #000,
		    -1px 1px 0 #000,
		    1px 1px 0 #000;
		}
		
		.title2 { 
			padding-bottom: 30px;
		    color: white;
		    text-align: center;
		    font-size: 3em;
		    font-weight: lighter;
		    font-style: italic;
		    font-family: console;
		    text-shadow:
		     -1px -1px 0 #000,
		     1px -1px 0 #000,
		     -1px 1px 0 #000,
		     1px 1px 0 #000;
		}
		.header
		{
		    margin-top: 20px;
		    padding: 5px 0px 40px 0px;
		    width: 920px;
		    box-shadow: 5px 15px 10px rgba(0, 0, 0, .2);
		    border-radius: 4px;
		    background: rgb(50,92,116); 
		    background: linear-gradient(to bottom, rgba(50,92,116,1) 1%,rgba(66,121,154,1) 99%); 
		}
		


	</ui:style>
	
 	<g:VerticalPanel horizontalAlignment='ALIGN_CENTER' width="100%">
 		<!-- extra container in order to get centering, above has 100% below is 920 px -->
 		<g:VerticalPanel styleName="{style.header}" horizontalAlignment='ALIGN_CENTER'> 
			<g:Label styleName="{style.title1}">Wags</g:Label>
			<g:Label styleName="{style.title2}">Web Automated Grading System</g:Label>
			
			<g:VerticalPanel styleName="{style.columns}" horizontalAlignment='ALIGN_CENTER'>
				<g:HorizontalPanel styleName="{style.sub_columns}">
					<g:Label styleName="{style.label}">Account: </g:Label>
					<g:TextBox ui:field="username" />
				</g:HorizontalPanel>
				
				<g:HorizontalPanel styleName="{style.sub_columns}">
					<g:Label styleName="{style.label}">Password: </g:Label>
					<g:PasswordTextBox ui:field="password" />
				</g:HorizontalPanel>
				<g:Button styleName="{style.button}" ui:field="loginButton" />
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
	
</ui:UiBinder> 